size(b)
[m,n]=size(b)
row=size(b,1);
col=size(b,2);
nn=2;
m=round(nn*row);
n=round(nn*col);
B=zeros(m,n,3);
for g=1:m
    for e=1:n
        x=round(g/nn);
         y=round(e/nn);
         if x==0 x=1;end
          if y==0 y=1;end
          if x>row x=row;end
             if y>col y=col;end
             B(g,e,:)=f(x,y,:);
    end
end
B=uint8(B);
figure;imshow(B);
